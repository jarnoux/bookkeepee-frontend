{
    "middleware": {
        "logger": {
            "format-prod": "{\"date\":\":date\",\"msec\":\":response-time\",\"addr\":\":remote-addr\",\"usag\":\":user-agent\",\"refr\":\":referrer\",\"req\":\":method :url\",\"resp\":\":status :res[content-length]\"}",
            "format": "dev"
        },
        "static": "static/",
        "cookieParser": "secret",
        "errorHandler": null,
        "bodyParser": null,
        "router": null,
        "session": null,
        "query": null,
        "csrf": null,
        "auth": null,
        "contextualizer": {
            "environment": "dev"
        },
        "logwriter": {
            "logLevel": "debug"
        },
        "dispatcher": {
            "routes": {
                "/": {
                    "get": ["header", "leftMenu", "index", "footer"]
                },
                "/about": {
                    "get": ["header", "leftMenu", "about", "footer"]
                }
            },
            "plans": {
                "index": {
                    "registerForm": "registerForm"
                }
            }
        },
        "validator": {
            "/register": {
                "email": {
                    "assert": {
                        "isEmail": []
                    },
                    "errorMessage": "Invalid Email"
                },
                "firstName": {
                    "assert": {
                        "notEmpty": []
                    },
                    "sanitize": {
                        "trim": []
                    }
                },
                "lastName": {
                    "assert": {
                        "notEmpty": []
                    },
                    "sanitize": {
                        "trim": []
                    }
                },
                "password": {
                    "assert": {
                        "len": [8]
                    }
                }
            },
            "/login": {}
        }
    },
    "models": {
        "backend": {
            "post": {
                "hostname": "localhost",
                "port": 3030,
                "headers": {
                    "Content-Type": "application/x-www-form-urlencoded"
                }
            }
        }
    },
    "controllers": {
        "body": {
            "top": null,
            "middle": null,
            "bottom": null
        },
        "composedBody": null,
        "footer": null,
        "header": null,
        "index": null,
        "leftMenu": null,
        "registerForm": null
    },
    "lib": {
        "hb-adapter": {
            "minifyHtml": true
        }
    }
}

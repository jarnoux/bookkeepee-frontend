{
    "middleware": {
        "logger": {
            "format-prod": "{\"date\":\":date\",\"msec\":\":response-time\",\"addr\":\":remote-addr\",\"usag\":\":user-agent\",\"refr\":\":referrer\",\"req\":\":method :url\",\"resp\":\":status :res[content-length]\"}",
            "format": "dev"
        },
        "static": "static/",
        "cookieParser": "secret",
        "errorHandler": null,
        "bodyParser": null,
        "hb-adapter": null,
        "router": null,
        "session": null,
        "query": null,
        "csrf": null,
        "auth": null,
        "contextualizer": {
            "environment": "dev"
        },
        "logwriter": {
            "logLevel": "debug"
        },
        "dispatcher": {
            "routes": {
                "/": {
                    "get": ["header", "index", "footer"]
                },
                "/test": {
                    "get": ["header", "body", "composedBody", "footer"]
                }
            },
            "plans": {
                "body": ["body.top", "body.middle", "body.bottom"],
                "composedBody": {
                    "top": "body.top",
                    "middle": "body.middle",
                    "bottom": "body.bottom"
                }
            }
        },
        "validator": {
            "/register": {
                "email": {
                    "assert": {
                        "isEmail": null
                    },
                    "sanitize": {
                        "trim": null
                    },
                    "errorMessage": "Invalid Email"
                }
            },
            "/login": {}
        }
    },
    "models": {
        "backend": {
            "post": {
                "hostname": "localhost",
                "port": 3030,
                "headers": {
                    "Content-Type": "application/x-www-form-urlencoded"
                }
            }
        }
    },
    "controllers": {
        "body": {
            "top": null,
            "middle": null,
            "bottom": null
        },
        "composedBody": null,
        "footer": null,
        "header": null,
        "index": null
    }
}
